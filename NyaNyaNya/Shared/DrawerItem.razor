<div class="d-flex flex-column" style="height: 100px; width: 100px; z-index: 5;">
    <div class="cat-container d-flex align-items-center justify-content-center" style="height: 80%; width: 100%;">
        <img src="@Cat.Image" alt="@Cat.Name" style="width: 75%; height: 75%;"/>
    </div>
    <span class="cat-container d-flex align-items-center justify-content-center" style="height: 20%; width: 100%;">@Cat.Name</span>
</div>

@code {
    [Parameter]
    public Cat? Cat { get; set; }
}
